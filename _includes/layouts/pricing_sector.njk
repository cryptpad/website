{% extends "layouts/main.njk" %}

{% import "components/cards.njk" as cards %}

{% block content %}

    <section class="half">
        <h1>CryptPad for <span class="sector-title">
            <i aria-hidden="true" class="fa {{icon}}"></i> {{sector}}
        </span></h1>
        <section class="your-own">
            {# {% include "components/instance_arguments.njk" %} #}
            <div class="your-own-preview">
                <img src="{{ image }}" alt="Screenshot of a CryptPad instance customized for {{sector}}">
            </div>
    </section>

    {% if (sector == "Enterprise") %}
        {% set anchor = "full" %}
    {% else %}
        {% set anchor = "discount" %}
    {% endif %}

    <section class="CTA">
        {% if price %}
            <a class="fake-button" href="/pricing#{{anchor}}">{{sector}} pricing<i class="fa fa-ticket" aria-hidden="true"></i> </a>
            <a class="fake-button" href="/try-cloud/">Launch Demo<i class="fa fa-rocket" aria-hidden="true"></i></a>
        {% endif %}
    </section>

    <section class="arguments">
        <h2>Benefits for {{ sector }}</h2>
        <div class="items">
            {% for benefit in benefits %}
                <div class="item">
                    <h3>{{ benefit.title }}</h3>
                    <p>{{ benefit.text | safe}}</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <section>
        <h2>{{sector}} testimonials</h2>
        <p class="align-center"><a href="{{site.testimonial_survey}}">Submit your own</a></p>
        {% import "components/testimonial_carousel.njk" as testimonial with context %}
        {{ testimonial.carousel(sector=sector) }}
    </section>

    <section class="CTA">
        {% if price %}
        <a class="fake-button" href="/pricing#{{anchor}}">{{sector}} pricing<i class="fa fa-ticket" aria-hidden="true"></i> </a>
        <a class="fake-button" href="/try-cloud/">Launch Demo<i class="fa fa-rocket" aria-hidden="true"></i></a>
        {% endif %}
    </section>

{% endblock %}