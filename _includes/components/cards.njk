

{% macro instance(title='', url='', description='', location='') %}
<section class="instance-wrapper">
    <section class="instance" tabindex="0" data-url="{{url}}">
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        <p class="instance-details">
            <span><i data-lucide="link"></i><a tabindex="-1" href="{{url}}" target="_blank">{{url}}</a></span>
            <br>
            <span><i data-lucide="pin"></i> Hosted in {{location}}</span>
            <br>
        </p>
    </section>
</section>
{% endmacro %}

