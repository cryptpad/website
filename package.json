{
  "name": "cryptpad.org",
  "version": "1.0.0",
  "description": "cryptpad.org site",
  "main": "build.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "node build.js",
    "optimize": "for i in static/images/*.png; do optipng $i;done;for i in static/images/*.jp*g;do jpegoptim $i;done",
    "clean": "rm built/ -rf",
    "serve": "python3 -m 'http.server' --directory built/",
    "watch": "find build.js package.json parts static styles data ! -path '**.*.swp' | entr -s 'npm run build'"
  },
